@model TravelDataAccess.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<h1>Customer Details</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Customer Information</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Customer Code</dt>
                    <dd class="col-sm-8">@Model.Code</dd>
                    
                    <dt class="col-sm-4">Full Name</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>
                    
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@(Model.Email ?? "N/A")</dd>
                    
                    <dt class="col-sm-4">Age</dt>
                    <dd class="col-sm-8">@(Model.Age?.ToString() ?? "N/A")</dd>
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Bookings</h3>
            </div>
            <div class="card-body">
                @if (ViewBag.Bookings != null && ((IEnumerable<TravelDataAccess.Booking>)ViewBag.Bookings).Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Booking Date</th>
                                <th>Trip</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in (IEnumerable<TravelDataAccess.Booking>)ViewBag.Bookings)
                            {
                                <tr>
                                    <td>@booking.BookingDate.ToString("MM/dd/yyyy")</td>
                                    <td>Trip #@booking.TripId</td>
                                    <td>@booking.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No bookings found.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

