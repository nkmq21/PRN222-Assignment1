@model TravelDataAccess.Customer

@{
    ViewData["Title"] = "My Profile";
}

<h1>My Profile</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Customer Information</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Customer Code</dt>
                    <dd class="col-sm-8">@Model.Code</dd>
                    
                    <dt class="col-sm-4">Full Name</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>
                    
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@(Model.Email ?? "N/A")</dd>
                    
                    <dt class="col-sm-4">Age</dt>
                    <dd class="col-sm-8">@(Model.Age?.ToString() ?? "N/A")</dd>
                </dl>
                
                <div class="mt-3">
                    <a asp-action="Edit" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </a>
                    <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-primary">
                        <i class="bi bi-calendar-check"></i> View All My Bookings
                    </a>
                    <a asp-action="Logout" class="btn btn-danger">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Recent Bookings</h3>
            </div>
            <div class="card-body">
                @if (ViewBag.Bookings != null && ((IEnumerable<TravelDataAccess.Booking>)ViewBag.Bookings).Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Booking Date</th>
                                <th>Trip</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in ((IEnumerable<TravelDataAccess.Booking>)ViewBag.Bookings).Take(5))
                            {
                                <tr>
                                    <td>@booking.BookingDate.ToString("MM/dd/yyyy")</td>
                                    <td>Trip #@booking.TripId</td>
                                    <td>
                                        <span class="badge @(booking.Status == "Confirmed" ? "bg-success" : "bg-danger")">
                                            @booking.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-sm btn-link">
                        View all bookings â†’
                    </a>
                }
                else
                {
                    <p class="text-muted">No bookings yet.</p>
                    <a asp-controller="Trip" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-globe"></i> Browse Trips
                    </a>
                }
            </div>
        </div>
    </div>
</div>

