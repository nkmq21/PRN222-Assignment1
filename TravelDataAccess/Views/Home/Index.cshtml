@{
    ViewData["Title"] = "Home Page";
    var customerName = Context.Session.GetString("CustomerName");
    var isLoggedIn = Context.Session.GetInt32("CustomerId") != null;
}

<div class="text-center">
    <h1 class="display-4">Welcome to Smart Travel System</h1>
    
    @if (isLoggedIn && !string.IsNullOrEmpty(customerName))
    {
        <p class="lead">Hello, <strong>@customerName</strong>!</p>
    }
    else
    {
        <p class="lead">Your journey starts here</p>
    }
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }
</div>

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-lg">
            <div class="card-body text-center p-5">
                <i class="bi bi-calendar-check" style="font-size: 4rem; color: #0d6efd;"></i>
                <h3 class="card-title mt-3">My Bookings</h3>
                <p class="card-text">View and manage your travel bookings</p>
                @if (isLoggedIn)
                {
                    <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-primary btn-lg mt-3">
                        View My Bookings
                    </a>
                }
                else
                {
                    <a asp-controller="Customer" asp-action="Login" class="btn btn-primary btn-lg mt-3">
                        Login to View Bookings
                    </a>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-5">
        <div class="card shadow-lg">
            <div class="card-body text-center p-5">
                <i class="bi bi-globe" style="font-size: 4rem; color: #198754;"></i>
                <h3 class="card-title mt-3">Available Trips</h3>
                <p class="card-text">Browse and book your next adventure</p>
                <a asp-controller="Trip" asp-action="Index" class="btn btn-success btn-lg mt-3">
                    Explore Trips
                </a>
            </div>
        </div>
    </div>
</div>

@if (!isLoggedIn)
{
    <div class="text-center mt-5">
        <p class="text-muted">Don't have an account? <a asp-controller="Customer" asp-action="Register" class="btn btn-link">Register here</a></p>
    </div>
}
